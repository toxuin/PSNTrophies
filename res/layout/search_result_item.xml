<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F3F3F3"
                android:orientation="horizontal"
                android:padding="5dp" android:gravity="center_vertical">

    <ImageView android:id="@+id/item_icon"
               android:layout_width="64dp"
               android:layout_height="64dp"
               android:src="@drawable/sample_game_icon_small"
               android:scaleType="fitCenter"
               android:background="@color/primary_material_dark"
               android:layout_marginRight="10dp"/>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:id="@+id/item_name_panel" android:gravity="center_vertical" android:layout_weight="1">

        <TextView android:id="@+id/item_title"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textSize="18sp"
                  android:textStyle="bold"
                  android:text="Super Abusive Game Name: Long Strings of Rage 2"
                  android:maxLines="2"/>
        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="Super Abusive Game Name: Long Strings of Rage 2"
                  android:textSize="12sp"
                  android:id="@+id/item_support_text"
                  android:textColor="@color/colorSecondaryTextDark"
                  android:layout_marginTop="5dp" android:maxLines="2" android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout android:layout_width="50dp"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:id="@+id/platfrom_panel"
                  android:layout_marginRight="10dp"
                  android:layout_marginLeft="10dp" android:gravity="center_vertical" android:layout_gravity="right" android:visibility="gone">

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/platform_ps3"
                       android:id="@+id/item_platform_ps3"
                       android:layout_marginBottom="10dp"
                       android:visibility="gone"/>

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/platform_ps4"
                       android:id="@+id/item_platform_ps4"
                       android:layout_marginBottom="5dp"
                       android:layout_marginTop="5dp" android:visibility="gone"/>

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/platform_vita"
                       android:id="@+id/item_platform_vita"
                       android:layout_marginTop="10dp" android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:id="@+id/item_trophy_color_panel"
                  android:gravity="center_vertical"
                  android:visibility="gone">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/item_trophy_color_image"
                   android:src="@drawable/trophy_platinum"
                   android:layout_marginLeft="5dp"
                   android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>